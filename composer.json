{
    "name": "mikemirten/json-api",
    "description": "JsonAPI standard implementation",
    "type": "library",
    "keyworks": ["JsonAPI", "JSON-API"],
    "license": "GPL-3.0",

    "require": {
        "php": "^7.0",
        "psr/http-message": "^1.0",
        "guzzlehttp/psr7": "^1.2"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "guzzlehttp/guzzle": "^6.0",
        "jms/serializer": "^1.4"

    },

    "autoload": {
        "psr-4": {
            "Mikemirten\\Component\\JsonApi\\": "src/"
        }
    },

    "suggest": {
        "guzzlehttp/guzzle": "Guzzle is a HTTP-client supported by JsonApi HTTP Client"
    }
}
